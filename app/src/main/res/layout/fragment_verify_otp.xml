<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Design.Ui.Fragments.Authentication.Otp.VerifyOtpFragment">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:contentDescription="@string/todo"
        android:scaleType="fitStart"
        android:src="@drawable/shape" />

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/verifyOtpButton">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/todo"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_sms_otp_design" />

            <TextView
                android:id="@+id/verificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginVertical="16dp"
                android:fontFamily="@font/hind_bold"
                android:text="@string/verifyCodeText"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/otpDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verificationText"
                android:fontFamily="@font/hind_regular"
                android:text="@string/sendOtpAccountSmgText"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/otpCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpDetailsText"
                android:layout_marginVertical="16dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:autofillHints="smsOTPCode"
                    android:background="?attr/colorSurfaceVariant"
                    android:cursorVisible="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="LabelFor" />

                <requestFocus />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:autofillHints="smsOTPCode"
                    android:background="?attr/colorSurfaceVariant"
                    android:cursorVisible="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="LabelFor" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:autofillHints="smsOTPCode"
                    android:background="?attr/colorSurfaceVariant"
                    android:cursorVisible="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="LabelFor" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:autofillHints="smsOTPCode"
                    android:background="?attr/colorSurfaceVariant"
                    android:cursorVisible="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="LabelFor" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp_5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:autofillHints="smsOTPCode"
                    android:background="?attr/colorSurfaceVariant"
                    android:cursorVisible="true"
                    android:imeOptions="actionGo"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/don_tReceiveCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpCodeLayout"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/hind_regular"
                    android:text="@string/didNotGetCodeText"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sendAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/hind_regular"
                    android:text="@string/sendAgainCodeText"
                    android:textAlignment="center"
                    android:textColor="?attr/colorTertiary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.sopnolikhi.booksmyfriend.Design.Ui.Custom.AnimationButton
        android:id="@+id/verifyOtpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="16dp" />

</RelativeLayout>